<view xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Config/etc/view.xsd">
    <media>
        <images module="Magento_Catalog">

            <!-- Widgets de produtos -->
            <image id="new_products_content_widget_grid" type="small_image">
                <width>230</width>
                <height>240</height>
            </image>

            <!-- Página da categoria (Grid) -->
            <image id="category_page_grid" type="small_image">
                <width>230</width>
                <height>240</height>
            </image>

            <!-- Imagem grande da página de produto -->
            <image id="product_page_image_large" type="image"/>
            <image id="product_page_image_medium" type="image">
                <width>361</width>
                <height>361</height>
            </image>

            <image id="product_page_image_small" type="thumbnail">
                <width>80</width>
                <height>80</height>
            </image>

            <!-- Página da categoria (Lista) -->
            <!-- <image id="category_page_list" type="small_image">
                <width>240</width>
                <height>243</height>
            </image> -->

            <image id="product_comparison_list" type="small_image">
                <width>230</width>
                <height>239</height>
            </image>
        </images>
    </media>

    <!-- <vars module="Magento_Catalog">
        <var name="gallery">
            <var name="nav">false</var>
            <var name="arrows">false</var>
            <var name="fullscreen">
                <var name="arrows">true</var>
                <var name="transition">
                    <var name="effect">slide</var>
                </var>
            </var>
        </var>
    </vars> -->

    <vars module="Magento_PageBuilder">
        <var name="breakpoints">
            <var name="desktop">
                <var name="conditions">
                    <var name="min-width">960px</var>
                </var>
                <var name="options">
                    <var name="products">
                        <var name="default">
                            <var name="slidesToShow">4</var>
                        </var>
                        <var name="continuous">
                            <var name="slidesToShow">4</var>
                        </var>
                    </var>
                </var>
            </var>
            <var name="tablet">
                <var name="conditions">
                    <var name="max-width">960px</var>
                    <var name="min-width">768px</var>
                </var>
                <var name="options">
                    <var name="products">
                        <var name="default">
                            <var name="slidesToShow">3</var>
                        </var>
                        <var name="continuous">
                            <var name="slidesToShow">3</var>
                        </var>
                    </var>
                </var>
            </var>
            <var name="mobile">
                <var name="conditions">
                    <var name="max-width">768px</var>
                    <var name="min-width">710px</var>
                </var>
                <var name="options">
                    <var name="products">
                        <var name="default">
                            <var name="slidesToShow">3</var>
                            <var name="arrows">false</var>
                        </var>
                        <var name="continuous">
                            <var name="slidesToShow">3</var>
                            <var name="arrows">false</var>
                        </var>
                    </var>
                </var>
            </var>
            <var name="mobile-small">
                <var name="conditions">
                    <var name="max-width">710px</var>
                    <var name="min-width">460px</var>
                </var>
                <var name="options">
                    <var name="products">
                        <var name="default">
                            <var name="slidesToShow">2</var>
                        </var>
                        <var name="continuous">
                            <var name="slidesToShow">2</var>
                        </var>
                    </var>
                </var>
            </var>
            <var name="mobile-new">
                <var name="conditions">
                    <var name="max-width">460px</var>
                </var>
                <var name="options">
                    <var name="products">
                        <var name="default">
                            <var name="slidesToShow">1</var>
                        </var>
                        <var name="continuous">
                            <var name="slidesToShow">1</var>
                        </var>
                    </var>
                </var>
            </var>
        </var>
    </vars>
</view>
